<div id="flightbox">
    <a href="#" id="prev_btn">&laquo;</a>
    <a href="#" id="next_btn">&raquo;</a>
    <div id="carousel">
        <h4>Flights</h4>
        <ul>
            {{#each flights}}
                <li>
                    {{this.flight_number}}

                    <form action="/flightStats" method="POST">
                        <input type="hidden" name="flightNumber" value="{{this.flight_number}}">
                        <input type="hidden" name="flightDate" value="{{this.flight_date}}">
                        <button class="button submit-btn" type="submit">Flight Informaion</button>
                    </form>
                </li>
            {{/each}}
        </ul>
    </div>
</div>

